<Page x:Class="BeautyShop.PageFolder.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautyShop.PageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="0, 0, 0, 100">
            <TextBlock Text="Выберите режим для входа"
                       HorizontalAlignment="Center" FontSize="32pt"
                       Margin="0, 0, 0, 50"/>
            <Button Content="Администрация" Name="BtnAdm" Click="BtnAdm_Click"/>
            <Button Content="Клиент" Name="BtnClient" Click="BtnClient_Click"/>
        </StackPanel>
    </Grid>
</Page>
