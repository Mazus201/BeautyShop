<Page x:Class="BeautyShop.PageFolder.Autorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautyShop.PageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autorization">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Width="500">
                <TextBlock FontSize="22pt" Text="Введите пароль администратора:" Margin="0, 5"/>
                    <TextBox FontSize="20pt" Name="PasswordBox"/>
                <Border Background="Red" Height="2" Visibility="Hidden"
                        Name="BrdInCorrect">
                </Border>
            </StackPanel>
            <WrapPanel Margin="15" HorizontalAlignment="Center">
                <Button x:Name="BtnAccept" Click="BtnAccept_Click" Content="Вход" IsDefault="True"/>
                <Button Name="BtnCancel" Click="BtnCancel_Click" Content="Отмена" IsCancel="True"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
